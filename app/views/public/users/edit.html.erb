<h2>プロフィール編集</h2>

<% if @user.errors.any? %>
  <%= @user.errors.count %>件のエラーが発生しました
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @user, url: public_user_path(@user.id) do |f| %>
  <label for="last_name">姓</label>
  <%= f.text_field :last_name, autofocus: true, id:"last_name", placeholder:"田中"%>
  <label for="first_name">名</label>
  <%= f.text_field :first_name, autofocus: true, id:"first_name", placeholder:"太郎"%>
  <label for="last_name_kana">姓カナ</label>
  <%= f.text_field :last_name_kana, autofocus: true, id:"last_name_kana", placeholder:"タナカ"%>
  <label for="first_name_kana">名カナ</label>
  <%= f.text_field :first_name_kana, autofocus: true, id:"first_name_kana", placeholder:"タロウ"%>
  <label for="phone_number">電話番号</label>
  <%= f.text_field :phone_number, autofocus: true, id:"phone_number", placeholder:"090-xxxx-xxxx"%>
  <label for="email">メールアドレス</label>
  <%= f.text_field :email, autofocus: true, id:"email", placeholder:"xxxx@xxx.co.jp(ne.jp/com)"%>
  <%= f.submit "変更を保存" %>
<% end %>
<%= link_to "戻る", public_user_path(current_user.id) %>
<%= link_to "退会", public_user_path(current_user.id) ,  method: :delete, "data-confirm" => "本当に退会しますか？" %>
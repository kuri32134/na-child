<div class="container">
  <div class="row">
  <h1>リーダー日誌一覧</h1>
    <table class="table">
      <tr>
        <th>作成者名前</th>
        <th>日誌の題名</th>
        <th>作成日時</th>
        <th>実行機能</th>
      </tr>
      <% @posts.each do |post| %>
      <tr>
        <td><%= @leaders.find(post.leader_id).name %></td>
        <td><%= post.title %></td>
        <td><%= post.created_at.strftime('%Y/%m,%d') %></td>
        <td>
          <%= link_to '削除', admin_post_path(post), method: :delete, data: {confirm: '本当に削除しますか？' } %>
          <%= link_to '詳細', admin_post_path(post.id) %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

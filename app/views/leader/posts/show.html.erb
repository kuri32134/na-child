<%= render 'searches/retrieval' %>
<h4>日誌詳細</h4>
<div>
  <p>題名：<%= @post.title %></p>
  <p>本文：<%= @post.body %></p>
  <p>日誌に関する画像：<%= image_tag @post.get_image(100,100) %></p>
  <p>投稿者：<%= @post.leader.name %></p>
  <p>投稿日：<%= @post.created_at.strftime('%Y/%m/%d') %></p>

   <% if @post.leader == current_leader %>
     <%= link_to "編集", edit_leader_post_path(@post) %></p>
     <%= link_to "削除", leader_post_path(@post), method: :delete, data: { confirm: '本当に削除しますか？' } %>
   <% end %>
</div>

<div>
  <p>コメント件数：<%= @post.post_comments.count %></p>
  <% @post.post_comments.each do |post_comment| %>
    <% if post_comment.leader.present? %>
      <%= post_comment.leader.name %>
    <% else %>
      <%= post_comment.user.first_name %>
    <% end %>
    
    <%= post_comment.created_at.strftime('%Y/%m/%d') %><%= post_comment.comment %>
    <% if post_comment.leader == current_leader %>
      <%= link_to "削除", leader_post_post_comment_path(post_comment.post,post_comment), method: :delete, data: { confirm: '本当に削除しますか？' } %>
    <% end %>
  <% end %>
</div>

<div>
  <%= form_with model: [@post, @post_comment], url: leader_post_post_comments_path(@post) do |f| %>
    <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
    <%= f.submit "送信する" %>
  <% end %>
</div>
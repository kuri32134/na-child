<h2>リーダー情報編集</h2>

<% if @leader.errors.any? %>
  <%= @leader.errors.count %>件のエラーが発生しました
  <ul>
    <% @leader.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @leader, url: leader_user_path(@leader.id) do |f| %>
  <label for="name">名前</label>
  <%= f.text_field :name, autofocus: true, id:"name", placeholder:"田中太郎"%>
  <label for="email">メールアドレス</label>
  <%= f.text_field :email, autofocus: true, id:"email", placeholder:"xxxx@xxx.co.jp(ne.jp/com)"%>
  <%= f.submit "変更を保存" %>
<% end %>

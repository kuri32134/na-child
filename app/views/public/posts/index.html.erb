<%= render 'searches/searche' %>
<h4>日誌一覧</h4>
<% @posts.each do |post| %>
  <div>
    <p>題名： <%= link_to public_post_path(post.id) do %><%= post.title %><% end %></p>
    <p>投稿者：<%= post.leader.name %></p>
    <p><%= link_to "#{post.post_comments.count} コメント", public_post_path(post.id) %></p>
  </div>
<% end %>

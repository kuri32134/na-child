<div class="container">
  <div class="row">
    <h1>コメント一覧</h1>
  </div>
  <div class="row">
    <h2>ユーザーコメント</h2>
    <table class="table">
      <tr>
        <th>名前</th>
        <th>コメント</th>
        <th>作成日時</th>
        <th>実行機能</th>
      </tr>
      <% @post_comments.each do |post_comment| %>
        <% if post_comment.user_id? %>
        <tr>
          <td><%= @users.find(post_comment.user_id).first_name %></td>
          <td><%= post_comment.comment %></td>
          <td><%= post_comment.created_at.strftime('%Y/%m,%d') %></td>
          <td><%= link_to '削除', admin_post_comment_path(post_comment), method: :delete, data: {confirm: '本当に削除しますか？' } %></td>
        </tr>
        <% end %>
      <% end %>
    </table>
  </div>
  <div class="row">
    <h2>リーダーコメント</h2>
    <table class="table">
      <tr>
        <th>名前</th>
        <th>コメント</th>
        <th>作成日時</th>
        <th>実行機能</th>
      </tr>
      <% @post_comments.each do |post_comment| %>
        <% if post_comment.leader_id? %>
        <tr>
          <td><%= @leaders.find(post_comment.leader_id).name %></td>
          <td><%= post_comment.comment %></td>
          <td><%= post_comment.created_at.strftime('%Y/%m,%d') %></td>
          <td></td>
          <td><%= link_to '削除', admin_post_comment_path(post_comment), method: :delete, data: {confirm: '本当に削除しますか？' } %></td>
        </tr>
        <% end %>
      <% end %>
    </table>
  </div>
</div>
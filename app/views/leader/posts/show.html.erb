<%= render 'searches/retrieval' %>
<h4>日誌詳細</h4>
<div>
  <p>題名：<%= @post.title %></p>
  <p>本文：<%= @post.body %></p>
  <p>日誌に関する画像：<%= image_tag @post.get_image(100,100) %></p>
  <p>投稿者：<%= @post.leader.name %></p>
  <p>投稿日：<%= @post.created_at.strftime('%Y/%m/%d') %></p>

   <% if @post.leader == current_leader %>
     <%= link_to "編集", edit_leader_post_path(@post) %></p>
     <%= link_to "削除", leader_post_path(@post), method: :delete %>
   <% end %>
</div>

<div>
  <p>コメント件数：<%= @post.post_comments.count %></p>
  <% @post.post_comments.each do |post_comment| %>
    <%= post_comment.leader.name %>
    <%= post_comment.created_at.strftime('%Y/%m/%d') %><%= post_comment.comment %>
  <% end %>
</div>

<div>
  <%= form_with model: [@post, @post_comment] do |f| %>
    <%= f.text_area :comment, rows: '6', placeholder: "コメントをここに" %>
    <%= f.submit "送信する" %>
  <% end %>
</div>
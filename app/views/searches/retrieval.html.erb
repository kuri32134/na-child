<%= render 'searches/retrieval' %>
<table class="table table-hover table-inverse">
  <!--検索対象モデルがUserの時 -->
  <% if @range == "Leader" %>
  <h2>検索結果 "<%= @word %>"</h2>
    <thead>
      <tr>
        <th>名前</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @leaders.each do |leader| %>
        <tr>
          <td><%= leader.name %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <!--検索対象モデルがUserではない時(= 検索対象モデルがBookの時) -->
    <thead>
      <tr>
        <th>題名</th>
        <th>投稿者</th>

      </tr>
    <tbody>
    <h2>検索結果 "<%= @word %>"</h2>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.title , leader_post_path(post.id) %></td>
        <td><%= post.leader.name %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>